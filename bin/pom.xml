<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.comugamers.spigot</groupId>
  <artifactId>pluginprueba</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <name>pluginprueba</name>
  
   <repositories>
    <repository>
      <id>comugamers</id>
      <url>https://repo.comugamers.com/repository/maven-group/</url>
    </repository>
    <repository>
      <id>papermc</id>
      <url>https://repo.papermc.io/repository/maven-public/</url>
    </repository>
    <repository>
      <id>triumph-snapshots</id>
      <url>https://repo.triumphteam.dev/snapshots/</url>
    </repository>
  </repositories>
  <dependencies>
        <dependency>
            <groupId>com.comugamers.quanta.platform.paper</groupId>
            <artifactId>quanta-platform-paper</artifactId>
            <version>2025.0622.1-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>com.comugamers.quanta</groupId>
            <artifactId>quanta-storage-yaml</artifactId>
            <version>2025.0622.1-SNAPSHOT</version>
        </dependency>
  </dependencies>
    
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.5.1</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <relocations>
                                <relocation>
                                    <pattern>com.comugamers.quanta</pattern>
                                    <shadedPattern>com.comugamers.example.lib.quanta</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>dev.triumphteam.cmd</pattern>
                                    <shadedPattern>com.comugamers.example.lib.cmd</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>dev.triumphteam.gui</pattern>
                                    <shadedPattern>com.comugamers.example.lib.gui</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>me.yushust.message</pattern>
                                    <shadedPattern>com.comugamers.example.lib.message</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>nonapi.io.github.classgraph</pattern>
                                    <shadedPattern>com.comugamers.example.lib.classgraph</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>nonapi.io.github.classgraph</pattern>
                                    <shadedPattern>com.comugamers.example.lib.classgraph</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.cryptomorin.xseries</pattern>
                                    <shadedPattern>com.comugamers.example.lib.xseries</shadedPattern>
                                </relocation>
                            </relocations>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>